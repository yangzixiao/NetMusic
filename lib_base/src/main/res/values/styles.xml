<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">#ffffff</item>
        <item name="colorPrimaryDark">#ffffff</item>
        <item name="colorAccent">@color/colorWhite</item>
    </style>


    <!--无ActionBar-->
    <style name="AppTheme.NoTitle" parent="AppTheme">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>


    <!--透明状态栏-->
    <style name="AppTheme.Transparent" parent="AppTheme.NoTitle">
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <!--透明状态栏-->
    <style name="AppTheme.TransparentCompat" parent="AppTheme.NoTitle">
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="AppTheme.Launcher" parent="AppTheme.NoTitle">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <!--透明状态栏-->
    <style name="AppTheme.Pay" parent="Theme.AppCompat.Dialog">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>


    <style name="popMenu_under_actionBar" parent="@style/ThemeOverlay.AppCompat.Light">
        <!-- 是否覆盖锚点，默认为true，即盖住Toolbar -->
        <!--        <item name="overlapAnchor">false</item>-->
        <item name="android:background">@color/colorWhite</item>
        <item name="android:dropDownWidth">wrap_content</item>
        <!--<item name="android:layout_marginRight">5dp</item>-->
        <!--&lt;!&ndash; 弹出层垂直方向上的偏移，即在竖直方向上距离Toolbar的距离，值为负则会盖住Toolbar &ndash;&gt;-->
        <!--<item name="android:dropDownHorizontalOffset">10dp</item>-->
        <!--<item name="android:dropDownVerticalOffset">10dp</item>-->
        <item name="android:textColor">@color/colorTitle</item>
        <item name="android:textSize">16sp</item>
        <item name="android:tint">@color/colorTitle</item>

    </style>


    <style name="WaterEffect">
        <item name="android:clickable">true</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>
    <style name="BLWaterEffect">
        <item name="rippleColor">@color/colorRipple</item>
        <item name="bl_ripple_enable">true</item>
        <item name="bl_ripple_color">@color/colorRipple</item>
    </style>


    <style name="SingleLine_End">
        <item name="singleLine">true</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="SingleLine_Marquee">
        <item name="singleLine">true</item>
        <item name="android:ellipsize">marquee</item>
    </style>


    <!--    ShapeImageView-->
    <style name="ShapeAppearanceOverlay.App.CornerSize50Percent" parent="">
        <item name="cornerSize">50%</item>
    </style>


    <style name="ShapeAppearanceOverlay.App.CornerSize3" parent="">
        <item name="cornerSize">@dimen/dim_round_image_corner</item>
    </style>

    <style name="TabLayout">
        <item name="android:textSize">@dimen/dim_textsize_16</item>
    </style>

    <style name="CircleShapeImageView" parent="Widget.MaterialComponents.ShapeableImageView">
        <item name="shapeAppearance">?attr/shapeAppearanceSmallComponent</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.App.CornerSize50Percent
        </item>
    </style>


    <style name="RoundShapeImageView" parent="Widget.MaterialComponents.ShapeableImageView">
        <item name="shapeAppearance">?attr/shapeAppearanceSmallComponent</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.App.CornerSize3</item>

    </style>


    <style name="StrokeMaterialButton" parent="@style/BaseMaterialButton">

        <item name="strokeWidth">@dimen/dim_stroke_width</item>
    </style>

    <style name="RoundMaterialButton15" parent="@style/Widget.MaterialComponents.Button.Icon">
        <item name="cornerRadius">15dp</item>
    </style>


    <style name="BaseMaterialButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="rippleColor">@color/colorRipple</item>
        <item name="background">@color/colorTransparent</item>
        <item name="theme">@style/Theme.MaterialComponents</item>
       <item name="paddingStart">0dp</item>
       <item name="android:paddingTop">0dp</item>
       <item name="paddingEnd">0dp</item>
       <item name="android:paddingBottom">0dp</item>
       <item name="android:paddingLeft">0dp</item>
       <item name="android:paddingRight">0dp</item>

        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
    </style>

    <style name="StyleMarquee">
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">marquee</item>
    </style>

    <style name="StyleWhiteTitle" parent="StyleMarquee">
        <item name="android:textSize">@dimen/titleTextSize</item>
        <item name="android:textColor">@color/colorWhiteTitle</item>
    </style>


    <style name="StyleToolbar">
        <item name="navigationIcon">@drawable/ic_nav_back</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
    </style>

    <style name="TabLayoutTabTextAppearance">
        <item name="android:textSize">@dimen/dim_textsize_12</item>
    </style>


    <style name="StyleToolbar.SubTitle">
        <item name="subtitleTextColor">@color/colorSubTitle</item>
        <item name="drawableEndCompat">@drawable/iv_next</item>

    </style>

</resources>